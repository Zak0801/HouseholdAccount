<% @user.errors.full_messages.each do |message|%>
    <div class="error_message">
        <%= message %>
    </div>
<% end %>
<%= form_tag("/user/create") do %>
    <p>ユーザー名:  <input name="myname" autofocus></p>
    <p>パスワード:  <input type="password" name="password"></p>
    <input type="submit" value="登録">
<% end %>