<!DOCTYPE html>
<html>
  <head>
    <title>HouseholdAccountApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <%= javascript_include_tag "check" %>
  <%= javascript_include_tag "deduct" %>

    <header>
    <% if session[:user_id] %>
      <div class="menu">
        <%= link_to("投稿","/item/new")%>
        <%= link_to("一覧","/item/index")%>
        <%= link_to(@current_user.name,"/user/edit") %>
        <%= link_to("ログアウト","/logout",{method: "post"})%>
      </div>
    <% else %>
      <div class="menu">  
        <%= link_to("新規登録","/user/new")%>
        <%= link_to("ログイン","/login")%>
      </div>
    <% end %>
      <% if flash[:notice] %>
        <div class="flash">
          <%= flash[:notice] %>
        </div>
      <% end %>
    </header>
    <%= yield %>
  </body>
</html>


